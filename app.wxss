/**app.wxss**/
page{color: #333;font-size: 32rpx;background: #f7f7f7;}
.container {width: 100%;height: 100%;display: flex;flex-direction: column;align-items: center;justify-content: space-between;padding: 0;box-sizing: border-box;}
.contentWidtn{width:710rpx; padding:20rpx;}
.fl{float: left;}
.fr{float: right;}
.tc{text-align: center;}
.priceRed{color:#ff3144; }
.none{display: none;}
.clear {clear: both;}
.clearfix:after { content: ""; display: block; height: 0;clear: both;}
.clearfix { zoom: 1;}
.bgWhite{background: #fff;}
img{display: block;}
.placeholder{color: #aaa;font-size: 26rpx;}

/*---Triangle---*/
.Triangle { position: relative;}
.Triangle:after {content: ' '; position: absolute;top: 48%; margin-top: -10rpx; right: 20rpx; width: 20rpx; height:20rpx; border: #333 solid;-webkit-transform: rotate(45deg); border-width: 4rpx 4rpx 0 0;}

.centerLine .Triangle:after {right: 10rpx; }

/*---btn---*/
button::after{border: none;border-radius:0;}
.button-hover{background-color: rgba(0, 0, 0, 0.1); opacity: 0.7;}
.btn {display: block;width:100%;height:100rpx;line-height:100rpx;font-size: 32rpx; border:none;text-align: center;color: #fff;}
.btnOrange {background-color: #ffa20d;border-radius:0; }
.btnBlue {background-color: #0097ff;}
.btnGray {height:98rpx;line-height:98rpx;background-color: #fff;color: #aaa;border: 1rpx solid #e5e5e5;}
.btnGray::after{border:1px solid #e5e5e5;}
.btnWhite{background-color: #fff;color: #ffa20d;}

/*---editOperation---*/
.shadow{box-shadow: 0 0 10rpx #ddd;border-radius: 10rpx;background: #fff;}
.editOperation{line-height:90rpx;margin-bottom: 20rpx;border-radius: 18rpx;}
.editOperation .label{padding-left:20rpx;}
.editOperation .detail{float:right;width:400rpx;color:#aaa;font-size:28rpx; padding-right: 50rpx;text-align: right;white-space:nowrap;text-overflow:ellipsis;overflow:hidden;}
.editOperation .detail input{width:100%; height:60rpx;line-height:60rpx;padding: 15rpx 0; color:#aaa;text-align: right;}
.editOperation .detailNoPadding{padding-right:0;}

/*---icon---*/
.icon_position{float:left;width:24rpx;height:32rpx;margin:30rpx 20rpx 0 0;}
.icon_phone{display: inline-block;width:24rpx;height:24rpx;margin-left: 10rpx;}

.starWrap {}
.starWrap image{float: left; width: 38rpx;height: 36rpx;margin-right:10rpx;}
.starWrap image:last-child{margin-right:0;}

/*---screenWrap---*/
.screenWrap {height:80rpx;overflow: hidden;}
.screenWrap .section{float: left;width:200rpx;line-height:80rpx;text-align: center;}
.screenWrap .section text{display:block;float: left;width: 160rpx;height:80rpx;line-height:80rpx;padding-right:30rpx; font-size: 28rpx;white-space:nowrap;text-overflow:ellipsis;overflow:hidden;text-align: center;}
.screenWrap .sort{}

.arrow {float: left; position: relative;}
.arrow:after {content: ' '; position: absolute;top:27rpx;right:18%; width: 12rpx; height:12rpx; border: #333 solid;-webkit-transform: rotate(135deg); border-width: 4rpx 4rpx 0 0;}

@import "/template/goods.wxss";
@import "/template/popupBox.wxss";
